BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: '34'
            font_size: 48
            on_text: app.handle_calculate()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.2
            Button:
                text: 'Up'
                font_size: 36
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                font_size: 36
                on_press: app.handle_increment(-1)
#    Button:
#        text: 'Convert miles to km'
#        font_size: 36
#        on_press: app.handle_calculate()
    Label:
        text: app.kilometres
        font_size: 48
        color: (1, 0.9, 0, 1)